// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "current_line_highlight": "none",
  "agent_servers": {
    "codex": {
      "default_mode": "auto"
    }
  },
  "toolbar": {
    "selections_menu": true,
    "agent_review": true,
    "code_actions": false,
    "quick_actions": true,
    "breadcrumbs": true
  },
  "agent": {
    "play_sound_when_agent_done": false,
    "button": true,
    "model_parameters": []
  },
  "collaboration_panel": {
    "button": false
  },
  "git_panel": {
    "collapse_untracked_diff": false,
    "sort_by_path": false,
    "status_style": "icon"
  },
  "agent_buffer_font_size": 12.0,
  "agent_ui_font_size": 14.0,
  "use_system_window_tabs": false,
  "preview_tabs": {
    "enable_preview_from_file_finder": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true
  },
  "show_signature_help_after_edits": true,
  "inlay_hints": {
    "enabled": false,
    "show_background": false
  },
  "outline_panel": {
    "dock": "left"
  },
  "languages": {
    "TSX": {
      "inlay_hints": {
        "enabled": false
      }
    }
  },
  "relative_line_numbers": "enabled",
  "disable_ai": false,
  "terminal": {
    "font_family": "Hack Nerd Font Mono",
    "font_size": 12.0,
    "line_height": { "custom": 1.1 },
    "font_fallbacks": ["Menlo", "Monaco", ".ZedMono"]
  },
  "project_panel": {
    "hide_hidden": false,
    "hide_root": false,
    "indent_size": 14,
    "git_status": true,
    "folder_icons": true,
    "file_icons": true,
    "entry_spacing": "standard",
    "hide_gitignore": false,
    "dock": "left",
    "auto_fold_dirs": false
  },
  "buffer_font_family": "Hack Nerd Font Mono",
  "buffer_font_fallbacks": ["Menlo", "Monaco", ".ZedMono"],
  "buffer_line_height": { "custom": 1.1 },
  "cursor_blink": false,
  "ui_font_family": ".SystemUIFont",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "VSCode",
  "minimap": {
    "show": "never"
  },
  "file_types": {},
  "vim_mode": true,
  "icon_theme": {
    "mode": "dark",
    "light": "Zed (Default)",
    "dark": "VSCode Icons"
  },
  "buffer_font_size": 14.0,
  "theme": {
    "mode": "dark",
    "light": "Xcode Default Light",
    "dark": "Fleet Dark"
  },
  "auto_install_extensions": {
    "vscode-dark-polished": true,
    "vercel-theme": true,
    "one-dark-darkened": true,
    "chawyehsu-vscode-icons": true,
    "html": true,
    "dockerfile": true,
    "prisma": true,
    "graphql": true,
    "gitlab-ci-ls": true,
    "git-firefly": true,
    "sql": true,
    "nginx": true
  },
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "features": {
    "edit_prediction_provider": "none"
  }
}
